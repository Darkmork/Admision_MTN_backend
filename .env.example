# ===========================================
# CONFIGURACIÓN DE SEGURIDAD - PLANTILLA
# COPIAR A .env Y COMPLETAR CON VALORES REALES
# NEVER COMMIT .env TO VERSION CONTROL
# ===========================================

# Base de Datos - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Admisión_MTN_DB
DB_USERNAME=admin
DB_PASSWORD=CHANGE_TO_SECURE_PASSWORD

# JWT Configuration - MANDATORY: CHANGE THESE SECRETS
JWT_SECRET=CHANGE_TO_SECURE_256_BIT_SECRET
JWT_EXPIRATION_TIME=86400000

# Email Configuration - SMTP Institucional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=admision@mtn.cl
SMTP_PASSWORD=CHANGE_TO_INSTITUTIONAL_APP_PASSWORD
SMTP_AUTH=true
SMTP_STARTTLS=true

# Configuración Institucional
INSTITUTIONAL_EMAIL_FROM_NAME="Colegio Monte Tabor y Nazaret - Sistema de Admisión"
INSTITUTIONAL_EMAIL_REPLY_TO=admision@mtn.cl
INSTITUTIONAL_EMAIL_SUPPORT=soporte@mtn.cl
INSTITUTIONAL_WEBSITE=www.mtn.cl
INSTITUTIONAL_PHONE="+56 2 2234 5678"

# Límites de Email Institucional
MAX_EMAILS_PER_HOUR=50
MAX_EMAILS_PER_DAY=200
MAX_EMAILS_PER_MONTH=5000

# Rate Limiting y Retry
EMAIL_RETRY_ATTEMPTS=4
EMAIL_RETRY_DELAY_MINUTES=5
EMAIL_QUEUE_MAX_SIZE=100

# Admin User Configuration
ADMIN_EMAIL=CHANGE_TO_ADMIN_EMAIL
ADMIN_PASSWORD_HASH=CHANGE_TO_BCRYPT_HASH

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB
UPLOAD_PATH=./uploads

# CORS Configuration - CRITICAL SECURITY SETTING
# DEVELOPMENT: Multiple local ports for testing
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176,http://localhost:5177
# PRODUCTION EXAMPLE: Only specific domains
# ALLOWED_ORIGINS=https://admision.mtn.cl,https://www.mtn.cl

# Application Configuration
SERVER_PORT=8080
CONTEXT_PATH=/

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Environment Mode (PRODUCTION: change to production)
SPRING_PROFILES_ACTIVE=development

# ===========================================
# INSTRUCTIONS FOR PRODUCTION:
# 1. Generate secure passwords: openssl rand -base64 32
# 2. Generate JWT secret: openssl rand -base64 64
# 3. Use proper SMTP service (SendGrid, AWS SES)
# 4. Set SPRING_PROFILES_ACTIVE=production
# 5. ⚠️ CRITICAL: Set ALLOWED_ORIGINS to ONLY production domains
# 6. Generate admin password hash: Use BCrypt with strength 12+
# 7. Remove all localhost origins from ALLOWED_ORIGINS
# 8. Use HTTPS URLs only in production ALLOWED_ORIGINS
# ===========================================